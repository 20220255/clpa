generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  clerkUserId  String      @unique
  email        String      @unique
  firstName    String
  lastName     String?
  imageUrl     String?
  isAdmin      Boolean
  role         Role        @default(USER)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  referenceIds Reference[]
  pointIds     Point[]
  payment      Payment[]
}

model Reference {
  id          String   @id @default(uuid())
  refId       String   @unique
  claimed     Boolean  @default(false)
  claimedDate String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pointIds    Point[]
  User        User     @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  userId      String

  @@index([userId])
}

model Point {
  id          String    @id @default(uuid())
  points      Int
  pointsDate  String
  numWash     Int
  numDry      Int
  comment     String?
  freeWash    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  User        User      @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  userId      String
  Reference   Reference @relation(fields: [referenceId], references: [refId], onDelete: Cascade)
  referenceId String

  @@index([referenceId])
  @@index([userId])
}

enum Role {
  USER
  EMPLOYEE
  ADMIN
}

// Create a table for E-Wallet Payment
model Payment {
  id                String   @id @default(uuid())
  amount            Float
  email             String?
  name              String?
  phone             String?
  currency          String
  description       String?
  fee               Float
  net_amount        Float
  payment_intent_id String   @unique
  type              String
  status            String
  createdAt         DateTime @default(now())
  User              User?    @relation(fields: [userId], references: [clerkUserId])
  userId            String?

  @@index([payment_intent_id])
  @@index([userId])
}
